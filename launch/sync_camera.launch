<?xml version="1.0"?>
<launch>
  <arg name="namespace" default="flir_boson"/>
  <arg name="left_frame_id" default="bf1"/>
  <arg name="right_frame_id" default="bf2"/>

  <!-- the linux file descriptor location for the camera -->
  <arg name="left_ip" default="169.254.87.157"/>
  <arg name="right_ip" default="169.254.82.142"/>

  <arg name="left_namespace" default="left" />
  <arg name="right_namespace" default="right" />
    
  <!-- valid values are 30.0 or 60.0 for Bosons -->
  <arg name="frame_rate" default="60.0"/>

  <!-- valid values are RAW16 or YUV -->
  <arg name="video_mode" default="YUV"/>

  <!-- valid values are TRUE or FALSE -->
  <arg name="zoom_enable" default="FALSE"/>

  <!-- valid values are Boson_320 or Boson_640 -->
  <!-- <arg name="sensor_type" default="Boson_640"/> -->

  <!-- location of the camera calibration file -->
  <arg name="camera_info_url" default="package://flir_boson_ethernet/example_calibrations/BlackFlyS.yaml"/>

  <group ns="$(arg namespace)">
    <node pkg="nodelet" 
          type="nodelet"
          name="nodelet_manager"
          args="manager"
          output="screen"/>

    <node pkg="nodelet" 
          type="nodelet"
          name="left_camera_node"
          args="load flir_boson_ethernet/SyncCameraController nodelet_manager"
          output="screen">
      <remap from="image_raw" to="$(arg left_namespace)/image_raw" />
      <remap from="camera_info_url" to="$(arg left_namespace)/camera_info_url" />
      <remap from="set_camera_info" to="$(arg left_namespace)/set_camera_info" />
      <remap from="actual_timestamp" to="$(arg left_namespace)/actual_timestamp" />
      
      <param name="frame_id" type="str" value="$(arg left_frame_id)"/>
      <param name="ip_addr" type="str" value="$(arg left_ip)"/>
      <param name="camera_info_url" type="str" value="$(arg camera_info_url)"/>
    </node>

    <node pkg="nodelet" 
          type="nodelet"
          name="right_camera_node"
          args="load flir_boson_ethernet/SyncCameraController nodelet_manager"
          output="screen">
      <remap from="image_raw" to="$(arg right_namespace)/image_raw" />
      <remap from="camera_info_url" to="$(arg right_namespace)/camera_info_url" />
      <remap from="set_camera_info" to="$(arg right_namespace)/set_camera_info" />
      <remap from="actual_timestamp" to="$(arg right_namespace)/actual_timestamp" />

      <param name="frame_id" type="str" value="$(arg right_frame_id)"/>
      <param name="ip_addr" type="str" value="$(arg right_ip)"/>
      <param name="camera_info_url" type="str" value="$(arg camera_info_url)"/>
    </node>

    <node pkg="nodelet"
          type="nodelet"
          name="time_sync"
          args="load flir_boson_ethernet/TimeSynchronizer nodelet_manager">
      <param name="frame_rate" type="double" value="$(arg frame_rate)"/>
    </node>

    <node pkg="nodelet"
          type="nodelet"
          name="left_time_diff"
          args="load flir_boson_ethernet/TimeDifference nodelet_manager">
    </node>

    <node pkg="nodelet"
          type="nodelet"
          name="stereo_proc"
          args="load stereo_image_proc/disparity nodelet_manager">
      <remap from="left/image_rect" to="left/image_raw" />
      <remap from="right/image_rect" to="right/image_raw" />
      <param name="approximate_sync" value="True" />
      <param name="queue_size" value="10" />
    </node>

  </group>

  <node name="stereo_view"
        pkg="image_view"
        type="stereo_view"
        output="screen">
    <param name="approximate_sync" value="True" />
    <param name="queue_size" value="10" />
    <remap from="image" to="image_raw" />
    <remap from="stereo" to="flir_boson" /> 
  </node>
</launch>
